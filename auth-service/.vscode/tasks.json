        {
            "label": "docker: up dev",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.dev.yml",
                "up",
                "-d"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
