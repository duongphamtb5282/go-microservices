# Production Environment Configuration
APP_ENV=production

# Database - Use production credentials
DATABASE_USERNAME=auth_user_prod
DATABASE_PASSWORD=your-secure-password

# PingAM - Use Real PingAM Server in Production
PINGAM_BASE_URL=https://pingam.yourcompany.com
PINGAM_CLIENT_ID=prod-auth-service-client
PINGAM_CLIENT_SECRET=your-secure-secret-from-vault
PINGAM_REDIRECT_URI=https://auth.yourcompany.com/callback

# Authorization Mode
AUTHORIZATION_MODE=pingam

# JWT
JWT_SECRET=your-production-secret-from-vault

